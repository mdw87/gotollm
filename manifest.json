{
  "manifest_version": 3,
  "name": "GoToLLM",
  "version": "1.0.0",
  "description": "Prompt any LLM instantly from the address bar. Type 'ai' + Tab + your question.",
  "omnibox": {
    "keyword": "ai"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://aistudio.google.com/*",
        "https://www.perplexity.ai/*",
        "https://grok.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}